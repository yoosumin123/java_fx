<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <HBox prefHeight="100.0" prefWidth="400.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <CheckBox fx:id="chk1" mnemonicParsing="false" onAction="#handleChkAction" text="안경" />
                  <CheckBox fx:id="chk2" mnemonicParsing="false" onAction="#handleChkAction" text="모자" />
               </children>
            </VBox>
            <ImageView fx:id="checkImageView" fitHeight="150.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../bin/p897/img/geek.gif" />
               </image>
            </ImageView>
            <Separator orientation="VERTICAL" prefHeight="100.0" />
            <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="150.0" spacing="20.0">
               <children>
                  <RadioButton fx:id="rad1" mnemonicParsing="false" text="BubbleChart">
                     <toggleGroup>
                        <ToggleGroup fx:id="group" />
                     </toggleGroup></RadioButton>
                  <RadioButton fx:id="rad2" mnemonicParsing="false" selected="true" text="BarChart" toggleGroup="$group" />
                  <RadioButton fx:id="rad3" mnemonicParsing="false" text="AreaChart" toggleGroup="$group" />
               </children></VBox>
            <ImageView fx:id="radioImageView" fitHeight="150.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../bin/p897/img/BarChart.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
   </center>
   <bottom>
      <Button fx:id="btnExit" mnemonicParsing="false" onAction="#handleBtnExitAction" text="Button" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
